<body>
    <h1>New Journal Entry</h1>
    

    <form action="/journal" method="POST">
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="text" id="date" name="date" class="form-control" />
        </div>

        <div class="form-group">
            <label for="entry">How are you feeling today?</label>
            <input type="text" id="mood" name="mood" class="form-control" id="mood-tracker"/>
        </div>

        <div class="form-group">
            <label for="entry">Journal Entry:</label>
            <input type="text" id="entry" name="entry" class="form-control" id="journal-entry" />
        </div>

        <!-- redirect to index page -->
        <input type="button" class="btn btn-primary" value="save" href="/index">


    </form>

    <!-- <%- include('../partials/footer.ejs') %> -->
</body>